# --- Kernel 基础配置 ---
ARCH=arm64
KERNEL_IMAGE_NAME=Image.gz-dtb  # 根据实际输出调整
KERNEL_SOURCE=https://github.com/lonelystar9x/android_kernel_xiaomi_sdm845
KERNEL_SOURCE_BRANCH=lineage-21-SU
KERNEL_CONFIG=vendor/xiaomi/perseus.config

# --- KernelSU 配置 ---
ENABLE_KERNELSU=true
KERNELSU_TAG=v0.9.5
ADD_KPROBES_CONFIG=true
ADD_OVERLAYFS_CONFIG=true

# --- 工具链配置（Android 12 示例）---
NDK_VERSION=21
CLANG_BRANCH=android12-release
CLANG_VERSION=r416183b

# --- 编译优化 ---
ENABLE_CCACHE=true
DISABLE_FST=true
DISABLE-LTO=true

# --- 关闭非必要功能 ---
ENABLE_LXC=false  # 除非明确需要 LXC
ENABLE_NETHUNTER=false
ENABLE_KALI=false
